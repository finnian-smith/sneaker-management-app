<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/item.css" />
    <title><%= title %></title>
  </head>
  <body>
    <%- include('partials/navbar') %>

    <div class="container my-5">
      <h1><%= title %></h1>

      <!-- Search Form -->
      <div class="d-flex justify-content-center my-5">
        <div class="card shadow my-3 search-card">
          <div class="card-body">
            <h5 class="card-title">Search for Items</h5>
            <form
              id="searchForm"
              action="/items/search"
              method="GET"
              class="row g-3"
            >
              <div class="col-12 col-md-8">
                <input
                  type="text"
                  name="search"
                  id="search"
                  placeholder="Search..."
                  class="form-control"
                />
              </div>
              <div class="col-12 col-md-4">
                <button type="submit" class="btn btn-primary w-100">
                  Search
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <div class="container my-5" id="itemsContainer">
        <div class="row">
          <% items.forEach(item => { %>
          <div class="col-md-12 col-lg-6 d-flex">
            <div class="card mb-3 item-card">
              <div class="row g-0">
                <div class="col-md-6">
                  <img
                    src="<%= item.image_url %>"
                    class="img-fluid rounded-start"
                    alt="<%= item.name %>"
                  />
                </div>
                <div class="col-md-6">
                  <div class="card-body">
                    <!-- linting error for background-color but renders fine -->
                    <p
                      class="card-text category-tag"
                      style="background-color: <%= item.category_tag %>"
                    >
                      <%= item.category_name || 'Category Unavailable' %>
                    </p>
                    <h5 class="card-title"><%= item.name %></h5>

                    <p class="card-text">
                      <%= item.brand || 'No brand available.' %>
                    </p>
                    <p class="card-text">
                      â‚¬<%= item.price || 'No price available.' %>
                    </p>
                    <p class="card-text">
                      <small class="text-body-secondary"
                        >Available Sizes: <%= item.size ? item.size : 'unknown'
                        %></small
                      >
                    </p>
                    <div class="btn-container">
                      <a href="/items/<%= item.id %>" class="btn btn-dark"
                        >View Details</a
                      >
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>

      <div class="d-flex justify-content-center">
        <a href="/" class="btn btn-secondary mt-2 mb-5">Back to Home</a>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script type="module" src="/js/itemSearch.js"></script>
  </body>
</html>
