<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/items.css" />
    <title><%= title %></title>
  </head>
  <body>
    <%- include('partials/navbar') %>

    <div class="items-container">
      <h1 class="items-title"><%= title %></h1>

      <div class="container my-5">
        <div class="row">
          <% items.forEach(item => { %>
          <div class="col-md-12 col-lg-6">
            <div class="card mb-3">
              <div class="row g-0">
                <div class="col-md-6">
                  <img
                    src="https://static.nike.com/a/images/t_PDP_936_v1/f_auto,q_auto:eco/e7669ab1-f716-428a-b8c3-ddc47d18b68c/NIKE+AIR+MAX+1.png"
                    class="img-fluid rounded-start"
                    alt="<%= item.name %>"
                  />
                </div>
                <div class="col-md-6">
                  <div class="card-body">
                    <!-- category tag color to be updated later with revised category structure -->
                    <p class="card-text category-tag">
                      <%= item.category_name || 'Category Unavailable' %>
                    </p>
                    <h5 class="card-title"><%= item.name %></h5>

                    <p class="card-text">
                      <%= item.brand || 'No brand available.' %>
                    </p>
                    <p class="card-text">
                      â‚¬<%= item.price || 'No price available.' %>
                    </p>
                    <p class="card-text">
                      <small class="text-body-secondary"
                        >Available Sizes: <%= item.size ? item.size : 'unknown'
                        %></small
                      >
                    </p>
                    <a href="/item/<%= item.id %>" class="btn btn-primary"
                      >View Details</a
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>

      <a href="/" class="btn btn-primary my-2">Back to Home</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
