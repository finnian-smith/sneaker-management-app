<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>

    <h2>Search for Items</h2>
    <form action="/item-management" method="GET">
      <input
        type="text"
        name="search"
        id="search"
        placeholder="Search for items..."
      />
      <select name="searchType" id="searchType">
        <option value="brand">Brand</option>
        <option value="category">Category</option>
        <option value="size">Size</option>
      </select>
      <button type="submit">Search</button>
    </form>

    <h2>Add New Item</h2>
    <form action="/item-management/add" method="POST">
      <label for="category_id">Category:</label>
      <select name="category_id" id="category_id" required>
        <option value="" disabled selected>--Select Category--</option>
        <% categories.forEach((category) => { %>
        <option value="<%= category.id %>"><%= category.name %></option>
        <% }) %>
      </select>
      <label for="name">Name:</label>
      <input type="text" name="name" id="name" />
      <label for="brand">Brand:</label>
      <input type="text" name="brand" id="brand" />
      <label for="price">Price:</label>
      <input type="number" name="price" id="price" />
      <label for="stock_quantity">Stock:</label>
      <input type="number" name="stock_quantity" id="stock_quantity" />
      <label for="size">Size:</label>
      <input type="text" name="size" id="size" />
      <button type="submit">Add Item</button>
    </form>

    <ul>
      <% items.forEach((item) => { %>
      <li>
        <strong><%= item.category_name %>:</strong>
        <ul>
          <li>
            <%= item.name %> / <%= item.brand %> / <%= item.price %> / <%=
            item.stock_quantity %> / <%= item.size %>
          </li>
          <li>
            <form action="/item-management/edit/<%= item.id %>" method="POST">
              <select name="category_id" id="category_id" required>
                <option value="" disabled selected>--Select Category--</option>
                <% categories.forEach((category) => { %>
                <option value="<%= category.id %>"><%= category.name %></option>
                <% }) %>
              </select>
              <input
                type="text"
                name="name"
                placeholder="New name"
                value="<%= item.name %>"
              />
              <input
                type="text"
                name="brand"
                placeholder="New brand"
                value="<%= item.brand %>"
              />
              <input
                type="number"
                name="price"
                placeholder="New price"
                value="<%= item.price %>"
              />
              <input
                type="number"
                name="stock_quantity"
                placeholder="New stock"
                value="<%= item.stock_quantity %>"
              />
              <input
                type="text"
                name="size"
                placeholder="New size"
                value="<%= item.size %>"
              />
              <button type="submit">Submit Edit</button>
            </form>
          </li>
          <li>
            <form action="/item-management/delete/<%= item.id %>" method="POST">
              <button type="submit">Delete Item</button>
            </form>
          </li>
        </ul>
      </li>
      <% }) %>
    </ul>

    <a href="/">Back to Home</a>
  </body>
</html>
