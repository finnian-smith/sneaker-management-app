<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>

    <ul>
      <% items.forEach((item) => { %>
      <li>
        <strong><%= item.name %>:</strong>
        <ul>
          <li>
            <p>Brand - <%= item.brand %></p>
            <p>Price - <%= item.price %></p>
            <p>Stock - <%= item.stock_quantity %></p>
            <p>Size - <%= item.size %></p>
          </li>
        </ul>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
