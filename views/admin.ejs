<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/admin.css" />
    <title><%= title %></title>
  </head>
  <body>
    <%- include('partials/navbar') %> <% if (!isAdmin) { %>
    <div class="admin-container">
      <!-- Login Form -->
      <h1 class="admin-title">Admin Login</h1>

      <!-- Check for error message -->
      <% if (typeof message !== 'undefined') { %>
      <div class="alert alert-danger mt-5"><%= message %></div>
      <% } %>

      <div class="my-5 card shadow">
        <div class="card-body">
          <form action="/admin/login" method="POST">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" required />
            <button type="submit" class="btn btn-dark">Login</button>
          </form>
        </div>
      </div>
      <% } else { %>

      <!-- Admin Dashboard -->
      <h1>Admin Dashboard</h1>

      <div>
        <a href="/category-management" class="btn btn-dark"
          >Manage Categories</a
        >
        <a href="/item-management" class="btn btn-dark">Manage Items</a>
      </div>

      <!-- Optional - display category-management as default -->
      <div>
        <%- include('categoryManagement', { categories: categories }) %>
      </div>
      <% } %>

      <a href="/" class="btn btn-secondary mt-2 mb-5">Back to Home</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
