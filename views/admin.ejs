<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/admin.css" />
    <title><%= title %></title>
  </head>
  <body>
    <%- include('partials/navbar') %> <% if (!isAdmin) { %>

    <!-- admin login -->
    <div class="container my-5">
      <h1>Admin Login</h1>
      <div class="d-flex justify-content-center">
        <% if (typeof message !== 'undefined') { %>
        <div class="alert alert-danger mt-5"><%= message %></div>
        <% } %>
      </div>
      <div class="d-flex justify-content-center">
        <div class="my-5 card shadow admin-login-card">
          <div class="card-body">
            <form action="/admin/login" method="POST" class="admin-login-form">
              <label for="password" class="admin-login-form-label"
                >Password</label
              >
              <input
                type="password"
                name="password"
                id="password"
                class="admin-login-form-input"
                required
              />
              <button type="submit" class="btn btn-dark">Login</button>
            </form>
          </div>
        </div>
      </div>

      <div class="d-flex justify-content-center">
        <a href="/" class="btn btn-secondary mt-2 mb-5">Back to Home</a>
      </div>
    </div>

    <% } else { %>

    <!-- admin dashboard -->
    <div class="container my-5">
      <h1>Admin Dashboard</h1>

      <!-- nav tabs -->
      <ul class="nav nav-tabs mt-3" id="adminTabs" role="tablist">
        <li class="nav-item" role="presentation">
          <button
            class="nav-link active"
            id="category-tab"
            data-bs-toggle="tab"
            data-bs-target="#category"
            type="button"
            role="tab"
            aria-controls="category"
            aria-selected="true"
          >
            Manage Categories
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button
            class="nav-link"
            id="item-tab"
            data-bs-toggle="tab"
            data-bs-target="#item"
            type="button"
            role="tab"
            aria-controls="item"
            aria-selected="false"
          >
            Manage Items
          </button>
        </li>
      </ul>

      <!-- tab content -->
      <div class="tab-content mt-4" id="adminTabContent">
        <!-- category management -->
        <div
          class="tab-pane fade show active"
          id="category"
          role="tabpanel"
          aria-labelledby="category-tab"
        >
          <div id="category-content"></div>
        </div>

        <!-- item management -->
        <div
          class="tab-pane fade"
          id="item"
          role="tabpanel"
          aria-labelledby="item-tab"
        >
          <div id="item-content"></div>
        </div>
      </div>
    </div>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
